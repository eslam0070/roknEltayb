<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.register.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/username"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/email_address"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/phone_number"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:boxStrokeColor="@color/white"
            android:longClickable="false"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userLayout"
            app:passwordToggleDrawable="@drawable/toggle_password_eye"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#CCCCCC">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="13dp"
                android:maxLength="98"
                android:textAlignment="viewStart"
                android:textColor="@color/colorHome"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:boxStrokeColor="@color/white"
            android:longClickable="false"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userLayout"
            app:passwordToggleDrawable="@drawable/toggle_password_eye"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#CCCCCC">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/confirm_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="13dp"
                android:maxLength="98"
                android:textAlignment="viewStart"
                android:textColor="@color/colorHome"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:weightSum="1"
            android:background="@drawable/custom_bg_edittext">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/choose"
                android:textColor="@color/textGrey"
                android:layout_marginStart="@dimen/_5sdp"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/_5sdp" />


            <Spinner
                android:id="@+id/areaSpin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/_5sdp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            app:boxBackgroundColor="@color/white"
            android:visibility="gone"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/block"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            android:visibility="gone"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/street"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            app:boxBackgroundColor="@color/white"
            android:visibility="gone"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/avenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/avenue"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            android:visibility="gone"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/building_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/building_number"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            app:boxBackgroundColor="@color/white"
            android:visibility="gone"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/floor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/floor"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            android:visibility="gone"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/apartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/apartment"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:longClickable="false"
            android:visibility="gone"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            app:boxStrokeColor="@color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/delivery_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg_edittext"
                android:gravity="start"
                android:hint="@string/delivery_instruction"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="98"
                android:padding="13dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                app:hintEnabled="true"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:text="@string/sign_up"
            android:background="@drawable/custom_bg_button"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginBottom="@dimen/_50sdp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_an_account"/>

            <TextView
                android:id="@+id/signUpTxt"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/forgetpassword"
                android:text="@string/login"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>